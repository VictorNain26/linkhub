datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Tenant {
  id    String @id @default(cuid())
  slug  String @unique
  name  String
  users User[]
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id])
  role     Role   @default(USER)
}

enum Role {
  OWNER
  ADMIN
  USER
}

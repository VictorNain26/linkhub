generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  links     Link[]
  createdAt DateTime @default(now())
}

model Link {
  id        Int      @id @default(autoincrement())
  url       String
  title     String?
  user      User      @relation(fields: [userId], references: [id])
  userId    Int
  tags      LinkTag[]
  createdAt DateTime  @default(now())
}

model Tag {
  id    Int       @id @default(autoincrement())
  name  String    @unique
  links LinkTag[]
}

model LinkTag {                // table de jointure M-N
  link   Link @relation(fields: [linkId], references: [id])
  linkId Int
  tag    Tag  @relation(fields: [tagId], references: [id])
  tagId  Int

  @@id([linkId, tagId])        // cl√© primaire composite
}
